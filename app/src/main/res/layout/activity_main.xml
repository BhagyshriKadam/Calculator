<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fadeScrollbars="false"
    android:background="#f0f0f0"
    android:scrollbarStyle="outsideOverlay"    tools:context=".MainActivity">

    <!--EditText for adding employee name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#20f0f0f0"
        android:gravity="center"
        android:padding="@dimen/dimens10dp"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:padding="@dimen/dimens5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/login_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimens5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/dimens20dp"
                android:text="Calculator"
                android:textStyle="bold"/>
    <!--Button for adding data to Firebase-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etx_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textSize="@dimen/dimens14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etx_emailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email id"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/dimens14sp" />
    </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens10dp"
            android:layout_marginTop="@dimen/dimens5dp"
            android:layout_marginRight="@dimen/dimens10dp"
            android:layout_marginBottom="@dimen/dimens5dp"
            android:background="@drawable/round_button_blue"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>